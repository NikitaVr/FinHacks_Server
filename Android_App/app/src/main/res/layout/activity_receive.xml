<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#4CAF50"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center">

    <TextView
        android:text="Current balance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:id="@+id/textView_balance" />

    <TextView
        android:text="$0.00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:id="@+id/textView_balance_receiver" />

    <ImageView android:layout_width="140dp"
        android:id="@+id/imageView1"
        android:src="@drawable/ic_group_black_24dp1"
        android:layout_height="140dp"
        android:scaleType="centerInside"
        android:layout_gravity="center_horizontal" />


    <TextView
            android:id="@+id/moneyReceived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="#ffffff"/>

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_confirm_transaction"
        android:visibility="gone"
        android:onClick="onTransactionConfirmed"/>

</LinearLayout>