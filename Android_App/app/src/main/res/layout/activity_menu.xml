<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.angeloaustria.buddylending.MenuActivity">

    <TextView
        android:text="Current Balance: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/textView5"
        android:textSize="18sp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="36sp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:padding="10px"/>

    <TextView
        android:text="Do you want to send or receive money?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/textView3"
        android:textSize="18sp"
        android:textAlignment="center"/>

    <Button
        android:text="Send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_send"
        android:onClick="onSendClick"
        android:background="#4CAF50"
        android:textColor="#FFFFFF"/>

    <Button
        android:text="Receive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/button_receive"
        android:layout_marginTop="24dp"
        android:onClick="onReceiveClick"
        android:background="#4CAF50"
        android:textColor="#FFFFFF"/>

    <TextView
        android:text="Karma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/karma"
        android:textSize="18sp"
        android:textAlignment="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/upVotes"
            android:textSize="36sp"
            android:textColor="@color/colorPrimary"
            android:gravity="center_vertical|right"
            android:paddingRight="20px"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/downVotes"
            android:textSize="36sp"
            android:textColor="#FF3F3F"
            android:gravity="start|center_vertical"
            android:paddingLeft="20px"/>
    </LinearLayout>
</LinearLayout>
